<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Campos de Proyecto
      </div>
      <div class="panel-body">
        <%= form_for(project) do |f| %>
          <% if project.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:
              </h2>
              <ul>
                <% project.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="row">
            <form role="form">
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group col-lg-12 col-lg-12">
                    <label><%= f.label :title %></label>
                    <%= f.text_field :title, class: "form-control" %>
                  </div>

                  <div class="form-group col-lg-12">
                    <label><%= f.label :abstract %></label>
                    <%= f.text_area :abstract, style: "resize: none;", rows: "5", class: "form-control" %>
                  </div>

                  <div class="form-group col-lg-12">
                    <label><%= f.label :subject_id %></label>
                    <%= f.select :subject_id, Subject.all.map { |s| [s.name, s.id]}, include_blank: "Seleccionar...", class: "form-control" %>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group col-lg-12">
                    <label><%= f.label :date %></label>
                    <%= f.date_field :date, class: "form-control" %>
                  </div>

                  <div class="form-group col-lg-12">
                    <label><%= f.label :authors %></label>
                    <%= f.text_field :authors, class: "form-control", placeholder: "Separados por coma. Ejm: Alejandro Lopez, JosÃ© Perez" %>
                  </div>

                  <div class="form-group col-lg-12">
                    <label><%= f.label :attachment %></label>
                    <%= f.file_field :attachment, type: "file" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="actions">
                  <div class="col-lg-6">
                    <div class="col-lg-12">
                      <%= f.submit class: 'btn btn-default col-lg-4 pull-right' %>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="col-lg-12">
                      <button type="reset" class="btn btn-default col-lg-4 pull-left"><%= I18n.t('reset_button') %></button>
                    </div>
                  </div>
                </div>
              </div>
            </form>
            <!-- /.col-lg-6 (nested) -->
          </div>
          <!-- /.row (nested) -->
        <% end %>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
